<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment">

    <ImageView android:id="@+id/pizza"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/margin_wide"
               android:layout_marginTop="@dimen/margin_wide"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:srcCompat="@drawable/pizza"
    />

    <TextView
            android:id="@+id/pizza_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_wide"
            android:text="@string/pizza_t"
            android:textAppearance="@style/font"
            app:layout_constraintStart_toEndOf="@id/pizza"
            app:layout_constraintTop_toTopOf="@+id/pizza"
    />

    <TextView
            android:id="@+id/pizza_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_wide"
            android:layout_marginStart="@dimen/margin_wide"
            android:text="@string/pizza_p"
            android:textAppearance="@style/font_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/pizza"
            app:layout_constraintTop_toBottomOf="@id/pizza_t"/>



    <ImageView android:id="@+id/spageti"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/margin_wide"
               android:layout_marginTop="@dimen/margin_wide"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/pizza"
               app:srcCompat="@drawable/spageti"
    />

    <TextView
            android:id="@+id/spageti_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_wide"
            android:text="@string/spageti_t"
            android:textAppearance="@style/font"
            app:layout_constraintStart_toEndOf="@id/spageti"
            app:layout_constraintTop_toTopOf="@+id/spageti"
    />
    <TextView
            android:id="@+id/spageti_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_wide"
            android:layout_marginStart="@dimen/margin_wide"
            android:text="@string/spageti_p"
            android:textAppearance="@style/font_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/spageti"
            app:layout_constraintTop_toBottomOf="@id/spageti_t"/>

    <ImageView android:id="@+id/burger"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/margin_wide"
               android:layout_marginTop="@dimen/margin_wide"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/spageti"
               app:srcCompat="@drawable/burger"
    />

    <TextView
            android:id="@+id/burger_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/burger_t"
            android:textAppearance="@style/font"
            app:layout_constraintStart_toStartOf="@id/spageti_desc"
            app:layout_constraintTop_toTopOf="@+id/burger"
    />
    <TextView
            android:id="@+id/burger_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_wide"
            android:text="@string/burger_p"
            android:textAppearance="@style/font_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/burger_t"
            app:layout_constraintTop_toBottomOf="@id/burger_t"/>

    <ImageView android:id="@+id/steak"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/margin_wide"
               android:layout_marginTop="@dimen/margin_wide"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/burger"
               app:srcCompat="@drawable/steak"
    />

    <TextView
            android:id="@+id/steak_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/steak_t"
            android:textAppearance="@style/font"
            app:layout_constraintStart_toStartOf="@id/burger_desc"
            app:layout_constraintTop_toTopOf="@+id/steak"
    />
    <TextView
            android:id="@+id/steak_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_wide"
            android:text="@string/steak_p"
            android:textAppearance="@style/font_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/steak_t"
            app:layout_constraintTop_toBottomOf="@id/steak_t"/>
</androidx.constraintlayout.widget.ConstraintLayout>